<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
  <title>Order Details</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
  <style>
    .content-main {
      margin-left: 250px;
      padding: 30px;
      background-color: #f5f5f5;
      min-height: 100vh;
      width: calc(100% - 250px);
    }

    .sidebar {
      width: 250px;
      flex-shrink: 0;
    }

    .card {
      border: none;
      border-radius: 20px;
      box-shadow: 0 4px 25px rgba(0, 0, 0, 0.1);
      background: white;
      overflow: hidden;
      margin-bottom: 20px;
    }

    .card-body {
      padding: 30px;
    }

    .content-title {
      color: #333;
      font-weight: 700;
      margin-bottom: 30px;
      font-size: 24px;
    }

    .order-info-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
      margin-bottom: 30px;
    }

    .info-label {
      font-weight: 600;
      color: #555;
      font-size: 14px;
      margin-bottom: 5px;
    }

    .info-value {
      color: #333;
      font-size: 14px;
    }

    .status-badge {
      display: inline-block;
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
    }

    .status-pending {
      background: #fff3cd;
      color: #856404;
    }

    .status-processing {
      background: #cce5ff;
      color: #004085;
    }

    .status-shipped {
      background: #d1ecf1;
      color: #0c5460;
    }

    .status-delivered {
      background: #d4edda;
      color: #155724;
    }

    .status-cancelled {
      background: #f8d7da;
      color: #721c24;
    }

    .status-return-requested {
      background: #fff3cd;
      color: #856404;
    }

    .status-return-approved {
      background: #d4edda;
      color: #155724;
    }

    .status-return-rejected {
      background: #f8d7da;
      color: #721c24;
    }

    .product-item {
      display: flex;
      gap: 20px;
      padding: 20px;
      border-bottom: 1px solid #e0e0e0;
      align-items: center;
    }

    .product-item:last-child {
      border-bottom: none;
    }

    .product-image {
      width: 80px;
      height: 80px;
      object-fit: cover;
      border-radius: 10px;
    }

    .product-details {
      flex: 1;
    }

    .product-name {
      font-weight: 600;
      color: #333;
      margin-bottom: 5px;
    }

    .product-meta {
      color: #666;
      font-size: 13px;
    }

    .verify-dropdown {
      position: relative;
      display: inline-block;
    }

    .verify-btn {
      background: #067d6d;
      color: white;
      border: none;
      border-radius: 8px;
      padding: 8px 16px;
      font-weight: 600;
      font-size: 14px;
      cursor: pointer;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .verify-btn:hover {
      background: #138496;
    }

    .dropdown-content {
      display: none;
      position: absolute;
      background-color: white;
      min-width: 160px;
      box-shadow: 0 8px 16px rgba(0,0,0,0.2);
      border-radius: 8px;
      z-index: 1;
      margin-top: 5px;
      overflow: hidden;
    }

    .dropdown-content.show {
      display: block;
    }

    .dropdown-item {
      color: #333;
      padding: 12px 16px;
      text-decoration: none;
      display: block;
      cursor: pointer;
      transition: background 0.2s;
      font-size: 14px;
    }

    .dropdown-item:hover {
      background-color: #f5f5f5;
    }

    .dropdown-item.accept {
      color: #155724;
    }

    .dropdown-item.reject {
      color: #721c24;
    }

    .return-reason {
      background: #fff3cd;
      border-left: 4px solid #856404;
      padding: 15px;
      border-radius: 8px;
      margin-top: 10px;
    }

    .return-reason-label {
      font-weight: 600;
      color: #856404;
      font-size: 13px;
      margin-bottom: 5px;
    }

    .return-reason-text {
      color: #856404;
      font-size: 13px;
    }

    @media (max-width: 768px) {
      .content-main {
        margin-left: 0;
        padding: 20px;
        width: 100%;
      }

      .order-info-grid {
        grid-template-columns: 1fr;
      }

      .product-item {
        flex-direction: column;
        text-align: center;
      }
    }
  </style>
</head>

<body class="bg-white text-gray-700">
  <div class="flex h-screen">
    <!-- Sidebar (placeholder - include your sidebar partial here) -->
    <aside class="sidebar bg-gray-800 text-white">
      <!-- Sidebar content -->
    </aside>

    <!-- Main Content -->
    <section class="content-main">
      <div class="content-header">
        <h2 class="content-title">Order Details</h2>
      </div>

      <!-- Order Information Card -->
      <div class="card">
        <div class="card-body">
          <h3 class="font-semibold text-lg mb-4">Order Information</h3>
          <div class="order-info-grid">
            <div>
              <div class="info-label">Order ID</div>
              <div class="info-value">#ORD-2025-001234</div>
            </div>
            <div>
              <div class="info-label">Order Date</div>
              <div class="info-value">October 15, 2025</div>
            </div>
            <div>
              <div class="info-label">Customer Name</div>
              <div class="info-value">John Doe</div>
            </div>
            <div>
              <div class="info-label">Payment Method</div>
              <div class="info-value">Credit Card</div>
            </div>
            <div>
              <div class="info-label">Order Status</div>
              <div class="info-value">
                <span class="status-badge status-delivered">Delivered</span>
              </div>
            </div>
            <div>
              <div class="info-label">Total Amount</div>
              <div class="info-value">$125.99</div>
            </div>
          </div>

          <!-- Shipping Address -->
          <div class="mt-4">
            <div class="info-label">Shipping Address</div>
            <div class="info-value">
              123 Main Street, Apt 4B<br>
              New York, NY 10001<br>
              United States
            </div>
          </div>
        </div>
      </div>

      <!-- Order Items Card -->
      <div class="card">
        <div class="card-body">
          <h3 class="font-semibold text-lg mb-4">Order Items</h3>
          
          <!-- Product 1 - Return Requested -->
          <div class="product-item">
            <img src="https://via.placeholder.com/80" alt="Product" class="product-image">
            <div class="product-details">
              <div class="product-name">Hydrating Face Serum</div>
              <div class="product-meta">Quantity: 1 | Price: $45.99</div>
              <div class="mt-2">
                <span class="status-badge status-return-requested">Return Requested</span>
              </div>
              <div class="return-reason">
                <div class="return-reason-label">Return Reason:</div>
                <div class="return-reason-text">Product not as described. The serum texture is different from what was shown in the images.</div>
              </div>
            </div>
            <div class="verify-dropdown">
              <button class="verify-btn" onclick="toggleDropdown(1)">
                <i class="fas fa-check-circle"></i>
                Verify Return
                <i class="fas fa-chevron-down"></i>
              </button>
              <div id="dropdown1" class="dropdown-content">
                <a class="dropdown-item accept" onclick="handleReturn(1, 'accept')">
                  <i class="fas fa-check"></i> Accept Return
                </a>
                <a class="dropdown-item reject" onclick="handleReturn(1, 'reject')">
                  <i class="fas fa-times"></i> Reject Return
                </a>
              </div>
            </div>
          </div>

          <!-- Product 2 - Normal Item -->
          <div class="product-item">
            <img src="https://via.placeholder.com/80" alt="Product" class="product-image">
            <div class="product-details">
              <div class="product-name">Moisturizing Cream</div>
              <div class="product-meta">Quantity: 2 | Price: $40.00</div>
              <div class="mt-2">
                <span class="status-badge status-delivered">Delivered</span>
              </div>
            </div>
          </div>

          <!-- Product 3 - Another Return Requested -->
          <div class="product-item">
            <img src="https://via.placeholder.com/80" alt="Product" class="product-image">
            <div class="product-details">
              <div class="product-name">Vitamin C Cleanser</div>
              <div class="product-meta">Quantity: 1 | Price: $40.00</div>
              <div class="mt-2">
                <span class="status-badge status-return-requested">Return Requested</span>
              </div>
              <div class="return-reason">
                <div class="return-reason-label">Return Reason:</div>
                <div class="return-reason-text">Received damaged product. The bottle was leaking.</div>
              </div>
            </div>
            <div class="verify-dropdown">
              <button class="verify-btn" onclick="toggleDropdown(2)">
                <i class="fas fa-check-circle"></i>
                Verify Return
                <i class="fas fa-chevron-down"></i>
              </button>
              <div id="dropdown2" class="dropdown-content">
                <a class="dropdown-item accept" onclick="handleReturn(2, 'accept')">
                  <i class="fas fa-check"></i> Accept Return
                </a>
                <a class="dropdown-item reject" onclick="handleReturn(2, 'reject')">
                  <i class="fas fa-times"></i> Reject Return
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Order Summary Card -->
      <div class="card">
        <div class="card-body">
          <h3 class="font-semibold text-lg mb-4">Order Summary</h3>
          <div class="space-y-2">
            <div class="flex justify-between">
              <span>Subtotal:</span>
              <span>$125.99</span>
            </div>
            <div class="flex justify-between">
              <span>Shipping:</span>
              <span>Free</span>
            </div>
            <div class="flex justify-between">
              <span>Tax:</span>
              <span>$0.00</span>
            </div>
            <div class="flex justify-between font-bold text-lg border-t pt-2 mt-2">
              <span>Total:</span>
              <span>$125.99</span>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

  <script>
    function toggleDropdown(id) {
      const dropdown = document.getElementById(`dropdown${id}`);
      
      // Close all other dropdowns
      const allDropdowns = document.querySelectorAll('.dropdown-content');
      allDropdowns.forEach(dd => {
        if (dd.id !== `dropdown${id}`) {
          dd.classList.remove('show');
        }
      });
      
      // Toggle current dropdown
      dropdown.classList.toggle('show');
    }

    function handleReturn(productId, action) {
      const dropdown = document.getElementById(`dropdown${productId}`);
      dropdown.classList.remove('show');
      
      if (action === 'accept') {
        if (confirm('Are you sure you want to accept this return request?')) {
          // Send accept request to server
          fetch(`/admin/orders/return/${productId}/accept`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ productId, action: 'accept' })
          })
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              alert('Return request accepted successfully');
              location.reload();
            } else {
              alert('Failed to accept return request');
            }
          })
          .catch(error => {
            console.error('Error:', error);
            alert('An error occurred');
          });
        }
      } else if (action === 'reject') {
        const reason = prompt('Please provide a reason for rejecting this return request:');
        if (reason) {
          // Send reject request to server
          fetch(`/admin/orders/return/${productId}/reject`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ productId, action: 'reject', reason })
          })
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              alert('Return request rejected');
              location.reload();
            } else {
              alert('Failed to reject return request');
            }
          })
          .catch(error => {
            console.error('Error:', error);
            alert('An error occurred');
          });
        }
      }
    }

    // Close dropdowns when clicking outside
    window.onclick = function(event) {
      if (!event.target.matches('.verify-btn') && !event.target.matches('.verify-btn *')) {
        const dropdowns = document.querySelectorAll('.dropdown-content');
        dropdowns.forEach(dropdown => {
          dropdown.classList.remove('show');
        });
      }
    }
  </script>
</body>
</html>