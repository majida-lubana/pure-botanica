<!DOCTYPE html>
<html lang="en">
    <%- include("../../views/partials/admin/sidebar") %>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Category</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">
  <div class="w-full max-w-md bg-white p-6 rounded-xl shadow-lg">
    <h2 class="text-2xl font-bold text-center mb-6">Edit Category</h2>
    <% if (category) { %>
      <form method="post" action="/admin/edit-category/<%= category._id %>">
        <!-- Add CSRF token if using it -->
        <% if (typeof csrfToken !== 'undefined') { %>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <% } %>
        <div class="mb-4">
          <label class="block text-gray-700 mb-2">Name</label>
          <input
            type="text"
            name="categoryName"
            value="<%= category.categoryName %>"
            class="w-full border border-gray-300 rounded px-3 py-2"
            required
          />
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 mb-2">Description</label>
          <textarea
            name="description"
            rows="4"
            class="w-full border border-gray-300 rounded px-3 py-2"
          ><%= category.description %></textarea>
        </div>
        <div class="text-right">
          <button
            id="editCategoryBtn"
            data-category-id="<%= category._id %>"
            class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700"
          >
            Update Category
          </button>
        </div>
      </form>
    <% } else { %>
      <p class="text-red-600 text-center">Category not found.</p>
    <% } %>
  </div>
  
</body>
</html>


