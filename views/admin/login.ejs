<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= pageTitle || "Login Page" %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Ensure SweetAlert2 CSS is included for styling -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
  </head>
  <body class="bg-[#0a192f] min-h-screen flex items-center justify-center p-4">
    <div class="bg-[#12161f] rounded-md p-8 w-full max-w-sm">
      <% if (typeof message !== 'undefined') { %>
      <div class="text-red-400 text-xs mb-2 text-center">
        <%= message %>
      </div>
      <% } %>

      <form
        id="loginForm"
        action="/admin/login"
        method="POST"
        class="flex flex-col space-y-4 text-white text-xs font-sans"
      >
        <label class="block">
          <span class="block mb-2">Email</span>
          <input
            name="email"
            id="email"
            type="email"
            placeholder="Email"
            class="w-full bg-[#1a1f2a] rounded text-xs text-white px-3 py-1.5 focus:outline-none"
            
          />
        </label>
        <label class="block">
          <span class="block mb-2">Password</span>
          <input
            name="password"
            id="password"
            type="password"
            placeholder="Password"
            class="w-full bg-[#1a1f2a] rounded text-xs text-white px-3 py-1.5 focus:outline-none"
           
          />
        </label>
        <button
          type="submit"
          class="bg-[#6c3aed] rounded text-[10px] font-semibold py-1.5 mt-1"
        >
          Log in
        </button>
      </form>
    </div>

    <script>
      // Ensure SweetAlert2 is loaded
      if (typeof Swal === 'undefined') {
        console.error('SweetAlert2 is not loaded.');
      }

      document.getElementById('loginForm').addEventListener('submit', function (e) {
        e.preventDefault(); // Prevent form submission until validation passes

        const email = document.getElementById('email').value.trim();
        const password = document.getElementById('password').value.trim();

        // Email format validation
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!email) {
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Email is required',
          });
          return;
        }
        if (!emailRegex.test(email)) {
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Please enter a valid email address',
          });
          return;
        }

        // Password validation
        if (!password) {
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Password is required',
          });
          return;
        }
        if (password.length < 6) {
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Password must be at least 6 characters long',
          });
          return;
        }

        // If validation passes, submit the form
        this.submit();
      });
    </script>
  </body>
</html>