<!-- partials/admin/sidebar.ejs -->
<style>
  .sidebar {
    width: 256px;
    min-height: 100vh;
    background-color: #a9c4c3;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 1000;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease;
  }

  .sidebar-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 16px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.2);
  }

  .sidebar-title {
    font-weight: 600;
    color: black;
    font-size: 18px;
    margin: 0;
  }

  .sidebar-title .dot {
    color: #dc2626;
  }

  .menu-button {
    background-color: #7a8a8a;
    padding: 8px;
    border-radius: 4px;
    border: none;
    cursor: pointer;
    display: none;
  }

  .menu-button i {
    color: black;
    font-size: 18px;
  }

  /* Mobile menu trigger button */
  .mobile-menu-trigger {
    display: none;
    position: fixed;
    top: 20px;
    left: 20px;
    z-index: 1001;
    background-color: #a9c4c3;
    padding: 12px 14px;
    border-radius: 8px;
    border: none;
    cursor: pointer;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    transition: all 0.3s ease;
  }

  .mobile-menu-trigger:hover {
    background-color: #8fb3b2;
    transform: scale(1.05);
  }

  .mobile-menu-trigger i {
    color: black;
    font-size: 20px;
  }

  .mobile-menu-trigger.hidden {
    display: none;
  }

  .sidebar-nav {
    margin-top: 16px;
    padding: 0 16px;
    flex: 1;
    display: flex;
    flex-direction: column;
    overflow-y: auto;
  }

  .nav-links-container {
    flex: 1;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #6b7280;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    padding: 8px 0;
    margin-bottom: 12px;
    transition: color 0.2s;
  }

  .nav-link:hover {
    color: #374151;
  }

  .nav-link.active {
    color: #374151;
    background-color: rgba(0, 0, 0, 0.1);
    padding: 8px;
    border-radius: 4px;
  }

  .nav-link i {
    width: 16px;
    text-align: center;
  }

  .logout-section {
    padding: 16px 0;
    border-top: 1px solid rgba(0, 0, 0, 0.2);
    margin-top: auto;
  }

  .logout-button {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #6b7280;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    padding: 8px 0;
    transition: color 0.2s;
    width: 100%;
    cursor: pointer;
  }

  .logout-button:hover {
    color: #dc2626;
  }

  .logout-button i {
    width: 16px;
    text-align: center;
  }

  /* Overlay for mobile */
  .sidebar-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 999;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .sidebar-overlay.active {
    opacity: 1;
  }

  /* Responsive Design */
  
  /* Tablets (1024px and below) */
  @media (max-width: 1024px) {
    .sidebar {
      width: 220px;
    }

    .sidebar-title {
      font-size: 16px;
    }

    .nav-link {
      font-size: 13px;
    }

    .logout-button {
      font-size: 13px;
    }
  }

  /* Mobile devices (768px and below) */
  @media (max-width: 768px) {
    .sidebar {
      transform: translateX(-100%);
      width: 280px;
      box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
    }

    .sidebar.active {
      transform: translateX(0);
    }

    .menu-button {
      display: block;
    }

    .mobile-menu-trigger {
      display: block;
    }

    .mobile-menu-trigger.hidden {
      display: none;
    }

    .sidebar-overlay {
      display: block;
    }

    .sidebar-header {
      padding: 16px;
    }

    .sidebar-title {
      font-size: 18px;
    }

    .nav-link {
      font-size: 14px;
      padding: 12px 8px;
      margin-bottom: 8px;
    }

    .logout-button {
      font-size: 14px;
      padding: 12px 8px;
    }
  }

  /* Small mobile devices (576px and below) */
  @media (max-width: 576px) {
    .sidebar {
      width: 260px;
    }

    .sidebar-header {
      padding: 14px;
    }

    .sidebar-title {
      font-size: 16px;
    }

    .nav-link {
      font-size: 13px;
      padding: 10px 8px;
    }

    .logout-button {
      font-size: 13px;
      padding: 10px 8px;
    }
  }

  /* Very small devices (400px and below) */
  @media (max-width: 400px) {
    .sidebar {
      width: 240px;
    }

    .sidebar-nav {
      padding: 0 12px;
    }
  }
</style>

