<!-- Include SweetAlert2 for confirmation dialog -->
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css"
/>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

<script>
  // Mobile menu toggle functionality
  const menuToggle = document.getElementById('menuToggle');
  const mobileTrigger = document.getElementById('mobileTrigger');
  const sidebar = document.getElementById('sidebar');
  const sidebarOverlay = document.getElementById('sidebarOverlay');
  
  function openSidebar() {
    sidebar.classList.add('active');
    sidebarOverlay.classList.add('active');
    mobileTrigger.classList.add('hidden');
  }

  function closeSidebar() {
    sidebar.classList.remove('active');
    sidebarOverlay.classList.remove('active');
    mobileTrigger.classList.remove('hidden');
  }
  
  // Open sidebar when mobile trigger is clicked
  mobileTrigger.addEventListener('click', openSidebar);
  
  // Close sidebar when X button is clicked
  menuToggle.addEventListener('click', closeSidebar);
  
  // Close sidebar when overlay is clicked
  sidebarOverlay.addEventListener('click', closeSidebar);
  
  // Close sidebar when a nav link is clicked on mobile
  const navLinks = document.querySelectorAll('.nav-link');
  navLinks.forEach(link => {
    link.addEventListener('click', () => {
      if (window.innerWidth <= 768 && sidebar.classList.contains('active')) {
        closeSidebar();
      }
    });
  });

  // Ensure SweetAlert2 is loaded
  if (typeof Swal === 'undefined') {
    console.error('SweetAlert2 is not loaded.');
  }

  // Add click event listener to the logout button
  document.getElementById('logoutButton').addEventListener('click', function (e) {
    e.preventDefault(); // Prevent the default link behavior

    // Show SweetAlert2 confirmation dialog
    Swal.fire({
      title: 'Are you sure?',
      text: 'Do you want to log out?',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#dc2626',
      cancelButtonColor: '#6b7280',
      confirmButtonText: 'Yes, log out',
      cancelButtonText: 'Cancel',
    }).then((result) => {
      if (result.isConfirmed) {
        // Redirect to logout endpoint if confirmed
        window.location.href = '/admin/logout';
      }
    });
  });
</script>