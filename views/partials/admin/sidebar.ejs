<!-- partials/admin/sidebar.ejs -->
<style>
  .sidebar {
    width: 256px;
    min-height: 100vh;
    background-color: #a9c4c3;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 40;
    display: flex;
    flex-direction: column;
  }

  .sidebar-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 16px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.2);
  }

  .sidebar-title {
    font-weight: 600;
    color: black;
    font-size: 18px;
    margin: 0;
  }

  .sidebar-title .dot {
    color: #dc2626;
  }

  .menu-button {
    background-color: #7a8a8a;
    padding: 8px;
    border-radius: 4px;
    border: none;
    cursor: pointer;
  }

  .menu-button i {
    color: black;
    font-size: 18px;
  }

  .sidebar-nav {
    margin-top: 16px;
    padding: 0 16px;
    flex: 1;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #6b7280;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    padding: 8px 0;
    margin-bottom: 12px;
    transition: color 0.2s;
  }

  .nav-link:hover {
    color: #374151;
  }

  .nav-link.active {
    color: #374151;
    background-color: rgba(0, 0, 0, 0.1);
    padding: 8px;
    border-radius: 4px;
  }

  .nav-link i {
    width: 16px;
    text-align: center;
  }

  .logout-button {
    position: absolute;
    right: 20px;
    top: 14px;
    background-color: #dc2626;
    color: white;
    font-weight: 600;
    padding: 6px 12px;
    border-radius: 4px;
    text-decoration: none;
    transition: background-color 0.2s;
    display: flex;
    align-items: center;
  }

  .logout-button:hover {
    background-color: #b91c1c;
  }

  .logout-button i {
    margin-right: 6px;
  }
</style>

<div class="sidebar">
  <!-- Top header -->
  <div class="sidebar-header relative">
    <h1 class="sidebar-title">
      Pure botanica<span class="dot">.</span>
    </h1>
    <a href="/admin/logout" class="logout-button">
      <i class="fas fa-sign-out-alt"></i> Logout
    </a>
  </div>

  <!-- Navigation links -->
  <nav class="sidebar-nav">
    <a href="/admin/dashboard" class="nav-link <%= currentPage === 'dashboard' ? 'active' : '' %>">
      <i class="fas fa-home"></i>
      <span>Dashboard</span>
    </a>
    <a href="/admin/users" class="nav-link <%= currentPage === 'users' || currentPage === 'customers' ? 'active' : '' %>">
      <i class="fas fa-user"></i>
      <span>Users</span>
    </a>
    <a href="/admin/category" class="nav-link <%= currentPage === 'category' ? 'active' : '' %>">
      <i class="fas fa-star"></i>
      <span>Category</span>
    </a>
    <a href="/admin/brands" class="nav-link <%= currentPage === 'brands' ? 'active' : '' %>">
      <i class="fas fa-star"></i>
      <span>Brands</span>
    </a>
    <a href="/admin/add-product" class="nav-link <%= currentPage === 'add-product' ? 'active' : '' %>">
      <i class="fas fa-plus"></i>
      <span>Add Products</span>
    </a>
    <a href="/admin/products" class="nav-link <%= currentPage === 'products' ? 'active' : '' %>">
      <i class="fas fa-lock"></i>
      <span>Products</span>
    </a>
    <a href="/admin/coupon" class="nav-link <%= currentPage === 'coupon' ? 'active' : '' %>">
      <i class="fas fa-file-alt"></i>
      <span>Coupon</span>
    </a>
    <a href="/admin/banner" class="nav-link <%= currentPage === 'banner' ? 'active' : '' %>">
      <i class="fas fa-file-alt"></i>
      <span>Banner</span>
    </a>
    <a href="/admin/orders" class="nav-link <%= currentPage === 'orders' ? 'active' : '' %>">
      <i class="fas fa-shopping-cart"></i>
      <span>Orders</span>
    </a>
  </nav>
</div>
