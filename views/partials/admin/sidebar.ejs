<!-- partials/admin/sidebar.ejs -->
<style>
  .sidebar {
    width: 256px;
    min-height: 100vh;
    background-color: #a9c4c3;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 40;
    display: flex;
    flex-direction: column;
  }

  .sidebar-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 16px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.2);
  }

  .sidebar-title {
    font-weight: 600;
    color: black;
    font-size: 18px;
    margin: 0;
  }

  .sidebar-title .dot {
    color: #dc2626;
  }

  .menu-button {
    background-color: #7a8a8a;
    padding: 8px;
    border-radius: 4px;
    border: none;
    cursor: pointer;
  }

  .menu-button i {
    color: black;
    font-size: 18px;
  }

  .sidebar-nav {
    margin-top: 16px;
    padding: 0 16px;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .nav-links-container {
    flex: 1;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #6b7280;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    padding: 8px 0;
    margin-bottom: 12px;
    transition: color 0.2s;
  }

  .nav-link:hover {
    color: #374151;
  }

  .nav-link.active {
    color: #374151;
    background-color: rgba(0, 0, 0, 0.1);
    padding: 8px;
    border-radius: 4px;
  }

  .nav-link i {
    width: 16px;
    text-align: center;
  }

  .logout-section {
    padding: 16px 0;
    border-top: 1px solid rgba(0, 0, 0, 0.2);
    margin-top: auto;
  }

  .logout-button {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #6b7280;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    padding: 8px 0;
    transition: color 0.2s;
    width: 100%;
    cursor: pointer;
  }

  .logout-button:hover {
    color: #dc2626;
  }

  .logout-button i {
    width: 16px;
    text-align: center;
  }
</style>

<div class="sidebar">
  <!-- Top header -->
  <div class="sidebar-header">
    <h1 class="sidebar-title">
      Pure botanica<span class="dot">.</span>
    </h1>
    <button class="menu-button">
      <i class="fas fa-bars"></i>
    </button>
  </div>

  <!-- Navigation links -->
  <nav class="sidebar-nav">
    <div class="nav-links-container">
<a href="/admin/dashboard" class="nav-link <%= currentPage === 'dashboard' ? 'active' : '' %>">
  <i class="fas fa-chart-line"></i>
  <span>Sales Report</span>
</a>
      <a href="/admin/users" class="nav-link <%= currentPage === 'users' || currentPage === 'customers' ? 'active' : '' %>">
        <i class="fas fa-user"></i>
        <span>Users</span>
      </a>
      <a href="/admin/category" class="nav-link <%= currentPage === 'category' ? 'active' : '' %>">
        <i class="fas fa-star"></i>
        <span>Category</span>
      </a>
      <a href="/admin/brands" class="nav-link <%= currentPage === 'brands' ? 'active' : '' %>">
        <i class="fas fa-star"></i>
        <span>Brands</span>
      </a>
      <a href="/admin/add-product" class="nav-link <%= currentPage === 'add-product' ? 'active' : '' %>">
        <i class="fas fa-plus"></i>
        <span>Add Products</span>
      </a>
      <a href="/admin/product-list" class="nav-link <%= currentPage === 'products' ? 'active' : '' %>">
        <i class="fas fa-lock"></i>
        <span>Products</span>
      </a>
      <a href="/admin/coupons" class="nav-link <%= currentPage === 'coupon' ? 'active' : '' %>">
        <i class="fas fa-file-alt"></i>
        <span>Coupon</span>
      </a>
      <a href="/admin/banner" class="nav-link <%= currentPage === 'banner' ? 'active' : '' %>">
        <i class="fas fa-file-alt"></i>
        <span>Banner</span>
      </a>
      <a href="/admin/orders" class="nav-link <%= currentPage === 'orders' ? 'active' : '' %>">
        <i class="fas fa-shopping-cart"></i>
        <span>Orders</span>
      </a>
    </div>

    <!-- Logout section at bottom -->
    <div class="logout-section">
      <a href="/admin/logout" class="logout-button" id="logoutButton">
        <i class="fas fa-sign-out-alt"></i>
        <span>Logout</span>
      </a>
    </div>
  </nav>
</div>

<!-- Include SweetAlert2 for confirmation dialog -->
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css"
/>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

<script>
  // Ensure SweetAlert2 is loaded
  if (typeof Swal === 'undefined') {
    console.error('SweetAlert2 is not loaded.');
  }

  // Add click event listener to the logout button
  document.getElementById('logoutButton').addEventListener('click', function (e) {
    e.preventDefault(); // Prevent the default link behavior

    // Show SweetAlert2 confirmation dialog
    Swal.fire({
      title: 'Are you sure?',
      text: 'Do you want to log out?',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#dc2626',
      cancelButtonColor: '#6b7280',
      confirmButtonText: 'Yes, log out',
      cancelButtonText: 'Cancel',
    }).then((result) => {
      if (result.isConfirmed) {
        // Redirect to logout endpoint if confirmed
        window.location.href = '/admin/logout';
      }
    });
  });
</script>