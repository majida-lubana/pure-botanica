<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
  <title>Beauty Cart - Your Shopping Basket</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    body { 
      font-family: 'Lato', sans-serif; 
      background-color: #f9fafb; 
    }
    .quantity-input { 
      appearance: none; 
      -webkit-appearance: none; 
      background: transparent; 
      text-align: center; 
      width: 40px; 
      border: 1px solid #e5e7eb;
      border-radius: 4px;
    }
    .quantity-input::-webkit-inner-spin-button, 
    .quantity-input::-webkit-outer-spin-button { 
      -webkit-appearance: none; 
      margin: 0; 
    }
    .offer-badge {
      background: #ef4444;
      color: white;
      font-size: 0.75rem;
      font-weight: bold;
      padding: 0.25rem 0.5rem;
      border-radius: 9999px;
    }
  </style>
</head>
<body>
  <%- include('../partials/user/header') %>

  <div class="container mx-auto px-4 pt-24 pb-8">
    <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Shopping Cart</h1>
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Cart Items -->
      <div class="lg:col-span-2">
        <% if (cart && cart.items && cart.items.length > 0) { %>
          <div class="bg-white rounded-lg shadow overflow-hidden" id="cart-items">
            <div class="hidden md:grid md:grid-cols-12 gap-4 px-6 py-4 bg-gray-50 border-b">
              <div class="md:col-span-6"><span class="font-semibold text-gray-700">Product</span></div>
              <div class="md:col-span-2 text-center"><span class="font-semibold text-gray-700">Price</span></div>
              <div class="md:col-span-2 text-center"><span class="font-semibold text-gray-700">Quantity</span></div>
              <div class="md:col-span-2 text-right"><span class="font-semibold text-gray-700">Total</span></div>
            </div>
            
            <% cart.items.forEach((item) => { %>
              <div class="border-b last:border-b-0 cart-item" data-product-id="<%= item.productId._id %>">
                <div class="md:grid md:grid-cols-12 gap-4 p-4 flex flex-wrap">
                  <!-- Image + Name -->
                  <div class="md:col-span-6 flex items-center space-x-4 mb-4 md:mb-0 w-full md:w-auto">
                    <div class="w-20 h-20 flex-shrink-0">
                      <img 
                        src="/Uploads/product-images/<%= item.productId.productImages?.[0] || '' %>" 
                        alt="<%= item.productId.productName %>" 
                        class="w-full h-full object-cover rounded"
                        onerror="this.src='/images/placeholder.jpg'"
                      >
                    </div>
                    <div>
                      <h3 class="font-medium text-gray-800"><%= item.productId.productName %></h3>
                      <p class="text-sm text-gray-500 mt-1 hidden md:block">
                        <%= item.productId.description?.substring(0, 40) + '...' || '' %>
                      </p>
                    </div>
                  </div>
                  
                  <!-- Price with Offer -->
                  <div class="md:col-span-2 flex md:justify-center items-center mb-4 md:mb-0 w-1/2 md:w-auto">
                    <div class="md:text-center">
                      <div class="flex items-center justify-center md:justify-start gap-2 flex-wrap">
                        <span class="text-2xl font-bold text-green-600">
                          ₹<%= item.productId.pricing.displayPrice.toFixed(2) %>
                        </span>
                        <% if (item.productId.pricing.savings > 0) { %>
                          <span class="text-sm line-through text-gray-500">
                            ₹<%= item.productId.pricing.originalPrice.toFixed(2) %>
                          </span>
                          <span class="offer-badge"><%= item.productId.pricing.discountPercentage %>%</span>
                        <% } %>
                      </div>
                      <% if (item.productId.pricing.savings > 0) { %>
                        <p class="text-xs text-gray-600 mt-1">Save ₹<%= item.productId.pricing.savings.toFixed(2) %></p>
                      <% } %>
                    </div>
                  </div>
                  
                  <!-- Quantity -->
                  <div class="md:col-span-2 flex md:justify-center items-center mb-4 md:mb-0 w-1/2 md:w-auto">
                    <div class="flex items-center border rounded">
                      <button data-action="decrease" data-product-id="<%= item.productId._id %>" class="px-2 py-1 text-gray-600 hover:bg-gray-100 update-quantity-btn">-</button>
                      <input type="number" value="<%= item.quantity %>" min="1" max="<%= item.productId.quantity %>" class="quantity-input text-center w-10" readonly>
                      <button data-action="increase" data-product-id="<%= item.productId._id %>" class="px-2 py-1 text-gray-600 hover:bg-gray-100 update-quantity-btn">+</button>
                    </div>
                  </div>
                  
                  <!-- Total -->
                  <div class="md:col-span-2 flex md:justify-end items-center w-full md:w-auto justify-between">
                    <span 
                      class="text-gray-900 font-medium total-price md:text-right"
                      data-sale-price="<%= item.productId.pricing.displayPrice.toFixed(2) %>"
                      data-original-price="<%= item.productId.pricing.originalPrice.toFixed(2) %>"
                    >
                      ₹<%= (item.productId.pricing.displayPrice * item.quantity).toFixed(2) %>
                    </span>
                    <form action="/cart/remove" method="POST" class="remove-form ml-4">
                      <input type="hidden" name="productId" value="<%= item.productId._id %>">
                      <button type="submit" class="text-gray-400 hover:text-red-500"><i class="fas fa-trash"></i></button>
                    </form>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>

          <!-- Pagination -->
          <% if (pagination.totalPages > 1) { %>
            <div class="mt-6 flex justify-center space-x-2">
              <a href="/cart?page=<%= pagination.currentPage - 1 %>" class="px-4 py-2 border rounded <%= !pagination.hasPrevPage ? 'opacity-50 pointer-events-none' : '' %>">Previous</a>
              <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                <a href="/cart?page=<%= i %>" class="px-4 py-2 border rounded <%= pagination.currentPage === i ? 'bg-black text-white' : 'text-gray-600 hover:bg-gray-100' %>"><%= i %></a>
              <% } %>
              <a href="/cart?page=<%= pagination.currentPage + 1 %>" class="px-4 py-2 border rounded <%= !pagination.hasNextPage ? 'opacity-50 pointer-events-none' : '' %>">Next</a>
            </div>
          <% } %>

          <div class="mt-4">
            <a href="/shop" class="text-blue-600 hover:text-blue-800 flex items-center"><i class="fas fa-arrow-left mr-2"></i> Continue Shopping</a>
          </div>
        <% } else { %>
          <div class="text-center bg-white p-10 rounded-lg shadow">
            <i class="fas fa-shopping-cart text-5xl text-gray-400 mb-6"></i>
            <h2 class="text-2xl font-medium text-gray-700 mb-4">Your cart is empty</h2>
            <a href="/shop" class="inline-block bg-black text-white py-2 px-6 rounded hover:bg-gray-900">Start Shopping</a>
          </div>
        <% } %>
      </div>
      
      <!-- Order Summary -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow p-6 sticky top-6" id="order-summary">
          <h2 class="text-lg font-bold mb-4 pb-2 border-b">Order Summary</h2>
          <div class="space-y-3 mb-6">
            <div class="flex justify-between text-sm"><span class="text-gray-600">Subtotal</span><span id="subtotal">₹<%= subtotal.toFixed(2) %></span></div>
            <% if (discount > 0) { %>
              <div class="flex justify-between text-sm text-green-600"><span>Discount</span><span id="discount">-₹<%= discount.toFixed(2) %></span></div>
            <% } %>
            <div class="flex justify-between text-sm"><span class="text-gray-600">Shipping</span><span id="shipping">₹<%= shippingCost.toFixed(2) %></span></div>
            <div class="flex justify-between text-sm"><span class="text-gray-600">Tax</span><span id="tax">₹<%= tax.toFixed(2) %></span></div>
          </div>
          <div class="flex justify-between font-bold text-lg pt-4 border-t"><span>Total</span><span id="total">₹<%= total.toFixed(2) %></span></div>
          <a href="/checkout" class="block mt-6">
            <button class="w-full bg-black text-white py-3 rounded hover:bg-gray-900 font-medium">Proceed to Checkout</button>
          </a>
          <div class="mt-4 text-center text-sm text-gray-500"><i class="fas fa-shield-alt mr-2 text-green-500"></i>Secure Checkout</div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/user/footer') %>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      let skipSummary = false;

      const showNotification = (msg, success = true) => {
        const div = document.createElement('div');
        div.className = `fixed top-20 right-4 px-4 py-2 rounded text-white shadow-lg z-50 ${success ? 'bg-green-500' : 'bg-red-500'}`;
        div.textContent = msg;
        document.body.appendChild(div);
        setTimeout(() => div.remove(), 3000);
      };

      const updateSummary = (data) => {
        document.getElementById('subtotal').textContent = `₹${data.subtotal.toFixed(2)}`;
        const disc = document.getElementById('discount');
        if (data.discount > 0) {
          if (disc) disc.textContent = `-₹${data.discount.toFixed(2)}`;
          else {
            const el = document.createElement('div');
            el.className = 'flex justify-between text-sm text-green-600';
            el.innerHTML = `<span>Discount</span><span id="discount">-₹${data.discount.toFixed(2)}</span>`;
            document.getElementById('shipping').parentElement.insertAdjacentElement('beforebegin', el);
          }
        } else if (disc) disc.parentElement.remove();
        document.getElementById('shipping').textContent = `₹${data.shippingCost.toFixed(2)}`;
        document.getElementById('tax').textContent = `₹${data.tax.toFixed(2)}`;
        document.getElementById('total').textContent = `₹${data.total.toFixed(2)}`;
      };

      const calcClientSummary = () => {
        let sub = 0, disc = 0;
        document.querySelectorAll('.cart-item').forEach(item => {
          const qty = parseInt(item.querySelector('.quantity-input').value);
          const dp = parseFloat(item.querySelector('.total-price').dataset.salePrice);
          const op = parseFloat(item.querySelector('.total-price').dataset.originalPrice);
          sub += dp * qty;
          disc += (op - dp) * qty;
        });
        const ship = sub > 1000 ? 0 : 50;
        const tax = sub * 0.1;
        const total = sub - disc + ship + tax;
        return { subtotal: sub, discount: disc, shippingCost: ship, tax, total };
      };

      document.querySelectorAll('.update-quantity-btn').forEach(btn => {
        btn.addEventListener('click', async (e) => {
          e.preventDefault();
          const productId = btn.dataset.productId;
          const action = btn.dataset.action;
          const input = btn.parentElement.querySelector('.quantity-input');
          const current = parseInt(input.value);
          const max = parseInt(input.max);
          const newQty = action === 'increase' ? current + 1 : current - 1;

          if (newQty < 1 || newQty > max || newQty > 5) {
            showNotification(newQty < 1 ? 'Minimum 1' : newQty > max ? 'Out of stock' : 'Max 5 per product', false);
            return;
          }

          const res = await fetch('/cart/update', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ productId, action })
          });
          const data = await res.json();

          if (data.success) {
            input.value = newQty;
            const totalEl = btn.closest('.cart-item').querySelector('.total-price');
            const dp = parseFloat(totalEl.dataset.salePrice);
            totalEl.textContent = `₹${(dp * newQty).toFixed(2)}`;

            const summary = calcClientSummary();
            updateSummary(summary);
            showNotification(`Quantity ${action === 'increase' ? 'increased' : 'decreased'}`);
            skipSummary = true;
            setTimeout(() => skipSummary = false, 1000);
          } else {
            showNotification(data.message || 'Update failed', false);
          }
        });
      });

      document.querySelectorAll('.remove-form').forEach(form => {
        form.addEventListener('submit', async (e) => {
          e.preventDefault();
          const productId = form.querySelector('input').value;
          const swalRes = await Swal.fire({
            title: 'Remove?', text: 'Remove this item?', icon: 'warning',
            showCancelButton: true, confirmButtonColor: '#d33'
          });
          if (!swalRes.isConfirmed) return;

          const res = await fetch('/cart/remove', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ productId })
          });
          const data = await res.json();

          if (data.success) {
            document.querySelector(`[data-product-id="${productId}"]`).remove();
            updateSummary(data);
            Swal.fire('Removed!', '', 'success');
            if (!document.querySelector('.cart-item')) location.reload();
          }
        });
      });

      const pollSummary = () => {
        if (skipSummary) return;
        fetch('/cart/summary', { method: 'POST' })
          .then(r => r.json())
          .then(d => d.success && updateSummary(d));
      };
      setInterval(pollSummary, 5000);
      pollSummary();
    });
  </script>
</body>
</html>