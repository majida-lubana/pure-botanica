<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Available Coupons</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body { 
            font-family: 'Inter', sans-serif; 
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        
        .coupon-card {
            background: linear-gradient(135deg, #ff6b6b, #ff8e53);
            border-radius: 20px;
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }
        
        .coupon-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.2);
        }
        
        .coupon-card::before {
            content: '';
            position: absolute;
            top: 50%;
            right: -30px;
            width: 60px;
            height: 60px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
            transform: translateY(-50%);
        }
        
        .coupon-card::after {
            content: '';
            position: absolute;
            top: 50%;
            left: -30px;
            width: 60px;
            height: 60px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
            transform: translateY(-50%);
        }
        
        .dashed-line {
            border-left: 2px dashed rgba(255,255,255,0.3);
            height: 100%;
        }
        
        .coupon-gradient-1 { background: linear-gradient(135deg, #667eea, #764ba2); }
        .coupon-gradient-2 { background: linear-gradient(135deg, #f093fb, #f5576c); }
        .coupon-gradient-3 { background: linear-gradient(135deg, #4facfe, #00f2fe); }
        .coupon-gradient-4 { background: linear-gradient(135deg, #43e97b, #38f9d7); }
        .coupon-gradient-5 { background: linear-gradient(135deg, #fa709a, #fee140); }
        .coupon-gradient-6 { background: linear-gradient(135deg, #a8edea, #fed6e3); }
        
        .used-coupon {
            background: linear-gradient(135deg, #9ca3af, #6b7280) !important;
        }
        
        .unavailable-coupon {
            background: linear-gradient(135deg, #f3f4f6, #d1d5db) !important;
            color: #6b7280;
        }
        
        .copy-btn {
            background: rgba(255,255,255,0.2);
            border: 1px solid rgba(255,255,255,0.3);
            backdrop-filter: blur(10px);
        }
        
        .copy-btn:hover {
            background: rgba(255,255,255,0.3);
        }
    </style>
</head>
<body>
    <%- include('../partials/user/header') %>
    
    <div class="container mx-auto px-4 py-8 mt-20">
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-white mb-4">
                <i class="fas fa-tags mr-3"></i>Available Coupons
            </h1>
            <p class="text-white text-opacity-80 text-lg">Save more with our exclusive discount offers!</p>
        </div>
        
        <% if (coupons.length > 0) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% coupons.forEach((coupon, index) => { 
                    const gradientClass = `coupon-gradient-${(index % 6) + 1}`;
                    const isUsed = coupon.isUsed;
                    const isAvailable = coupon.isAvailable;
                    const canUse = !isUsed && isAvailable;
                %>
                    <div class="coupon-card <%= isUsed ? 'used-coupon' : !isAvailable ? 'unavailable-coupon' : gradientClass %> p-6 text-white shadow-xl">
                        <div class="flex h-full">
                            <!-- Left Section -->
                            <div class="flex-1 pr-4">
                                <div class="mb-4">
                                    <h3 class="text-xl font-bold mb-2"><%= coupon.name %></h3>
                                    <div class="text-2xl font-black mb-1">
                                        <%= coupon.discountType === 'percentage' ? coupon.offerPrice + '% OFF' : '₹' + coupon.offerPrice + ' OFF' %>
                                    </div>
                                    <p class="text-sm opacity-90">
                                        <% if (coupon.description) { %>
                                            <%= coupon.description %>
                                        <% } else { %>
                                            Save on your order!
                                        <% } %>
                                    </p>
                                </div>
                                
                                <div class="space-y-2 text-sm opacity-90">
                                    <div class="flex items-center">
                                        <i class="fas fa-shopping-cart mr-2 text-xs"></i>
                                        Min order: ₹<%= coupon.minimumPrice %>
                                    </div>
                                    <div class="flex items-center">
                                        <i class="fas fa-calendar-alt mr-2 text-xs"></i>
                                        Valid till: <%= new Date(coupon.expireOn).toLocaleDateString('en-IN', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                                    </div>
                                    <div class="flex items-center">
                                        <i class="fas fa-users mr-2 text-xs"></i>
                                        <%= coupon.usageLimit - coupon.usedCount %> uses left
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Divider -->
                            <div class="dashed-line mx-3"></div>
                            
                            <!-- Right Section -->
                            <div class="w-32 flex flex-col justify-center items-center text-center">
                                <div class="mb-4">
                                    <div class="text-xs opacity-75 mb-2">COUPON CODE</div>
                                    <div class="font-mono font-bold text-lg bg-white bg-opacity-20 px-3 py-2 rounded-lg">
                                        <%= coupon.couponCode %>
                                    </div>
                                </div>
                                
                                <% if (isUsed) { %>
                                    <div class="w-full">
                                        <div class="bg-white bg-opacity-20 px-3 py-2 rounded-lg text-xs font-semibold">
                                            ALREADY USED
                                        </div>
                                    </div>
                                <% } else if (!isAvailable) { %>
                                    <div class="w-full">
                                        <div class="bg-white bg-opacity-20 px-3 py-2 rounded-lg text-xs font-semibold">
                                            NOT AVAILABLE
                                        </div>
                                    </div>
                                <% } else { %>
                                    <button onclick="copyCouponCode('<%= coupon.couponCode %>')" 
                                            class="copy-btn w-full py-2 rounded-lg text-xs font-semibold transition-all duration-200 hover:scale-105">
                                        <i class="fas fa-copy mr-1"></i>COPY CODE
                                    </button>
                                <% } %>
                            </div>
                        </div>
                        
                        <!-- Status Badge -->
                        <% if (isUsed || !isAvailable) { %>
                            <div class="absolute top-4 right-4">
                                <div class="bg-black bg-opacity-30 px-2 py-1 rounded-full text-xs font-semibold">
                                    <%= isUsed ? 'USED' : 'UNAVAILABLE' %>
                                </div>
                            </div>
                        <% } %>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="text-center py-20">
                <div class="text-6xl text-white text-opacity-50 mb-6">
                    <i class="fas fa-ticket-alt"></i>
                </div>
                <h2 class="text-2xl font-bold text-white mb-4">No Coupons Available</h2>
                <p class="text-white text-opacity-75 mb-8">Check back later for exciting offers!</p>
                <a href="/shop" class="bg-white text-purple-600 px-8 py-3 rounded-full font-semibold hover:bg-opacity-90 transition-colors">
                    <i class="fas fa-shopping-bag mr-2"></i>Continue Shopping
                </a>
            </div>
        <% } %>
    </div>
    
    <%- include('../partials/user/footer') %>
    
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function copyCouponCode(code) {
            navigator.clipboard.writeText(code).then(() => {
                Swal.fire({
                    icon: 'success',
                    title: 'Copied!',
                    text: `Coupon code "${code}" copied to clipboard`,
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true
                });
            }).catch(() => {
                // Fallback for older browsers
                const textArea = document.createElement('textarea');
                textArea.value = code;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                
                Swal.fire({
                    icon: 'success',
                    title: 'Copied!',
                    text: `Coupon code "${code}" copied to clipboard`,
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true
                });
            });
        }
    </script>
</body>
</html>