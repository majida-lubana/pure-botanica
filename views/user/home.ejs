<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Beauty Pronounced' %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Open+Sans&display=swap" rel="stylesheet"/>
    <style>
        body {
            font-family: "Open Sans", sans-serif;
        }
        h1, h2, h3, h4, h5, h6 {
            font-family: "Montserrat", sans-serif;
        }
        .hero-section {
            position: relative;
            overflow: hidden;
        }
        .hero-bg-image {
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 50%;
            background-image: url('https://storage.googleapis.com/a1aa/image/69ab7bc4-60d7-4c8f-53a8-d32ece7b1806.jpg');
            background-size: cover;
            background-position: center;
            opacity: 0.1;
            pointer-events: none;
            user-select: none;
            z-index: 0;
        }
        .hero-content {
            position: relative;
            z-index: 10;
            max-width: 600px;
            color: white;
        }
        .offer-badge {
        background: #ef4444;
        color: white;
        font-size: 0.75rem;
        font-weight: bold;
        padding: 0.25rem 0.5rem;
        border-radius: 9999px;
    }
    </style>
</head>
<body class="bg-white text-gray-900">
    <%-include("../../views/partials/user/header")%>

    <section class="hero-section pt-28 pb-20 px-6 sm:px-10 md:px-16 lg:px-24 xl:px-32 bg-gradient-to-b from-[#0f3a3f] to-[#0a2a2d]">
        <div class="hero-bg-image"></div>
        <div class="hero-content">
            <p class="uppercase text-xs sm:text-sm tracking-widest mb-2">PURE BOTANICA</p>
            <h1 class="text-4xl sm:text-5xl font-bold leading-tight mb-4">PRONOUNCED</h1>
            <p class="text-sm sm:text-base leading-relaxed mb-6">
                Learn what makes a great beauty product and how to use it to enhance your natural beauty. Discover the best tips and tricks from industry experts.
            </p>
            <a class="border border-white text-white uppercase text-xs sm:text-sm font-semibold tracking-widest px-6 py-2 hover:bg-white hover:text-[#0a2a2d] transition" href="/shop">
                Get Started
            </a>
        </div>
    </section>

    <section class="max-w-7xl mx-auto px-6 sm:px-10 md:px-16 lg:px-24 xl:px-32 py-16">
        <h2 class="text-center text-xs sm:text-sm font-semibold tracking-widest uppercase mb-10">
            ADD A FLAVOR TO BEING A GIRL
        </h2>
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-6">
    <% if (typeof paginatedProducts !== 'undefined' && paginatedProducts.length > 0) { %>
        <% paginatedProducts.forEach(product => { %>
            <div class="text-center bg-white p-4 rounded-lg transition transform hover:scale-105 hover:shadow-lg relative">
                <!-- Offer Badge -->
                <% if (product.pricing && product.pricing.savings > 0) { %>
                    <span class="absolute top-2 left-2 bg-red-500 text-white text-xs font-bold px-2 py-1 rounded-full z-10">
                        <%= product.pricing.discountPercentage %>% OFF
                    </span>
                <% } %>

                <a href="/product/<%= product.id %>">
                    <img alt="<%= product.name %>" class="mx-auto mb-3 cursor-pointer" height="200" src="<%= product.image %>" width="200"/>
                </a>
                <p class="text-xs font-semibold"><%= product.name.toUpperCase() %></p>

                <!-- Pricing with Offer -->
                <div class="mt-1">
                    <% if (product.pricing && product.pricing.savings > 0) { %>
                        <div class="flex items-center justify-center gap-1 flex-wrap">
                            <span class="text-sm font-bold text-green-600">₹<%= product.pricing.displayPrice.toFixed(2) %></span>
                            <span class="text-xs line-through text-gray-500">₹<%= product.pricing.originalPrice.toFixed(2) %></span>
                        </div>
                        <p class="text-xs text-gray-600">Save ₹<%= product.pricing.savings.toFixed(2) %></p>
                    <% } else { %>
                        <p class="text-sm font-bold text-gray-800">₹<%= product.price.toFixed(2) %></p>
                    <% } %>
                </div>

                <!-- Rating -->
                <div class="flex justify-center text-yellow-400 text-xs mt-1">
                    <% for(let i = 1; i <= 5; i++) { %>
                        <% if (i <= Math.floor(product.rating)) { %>
                            <i class="fas fa-star"></i>
                        <% } else if (i - 0.5 <= product.rating) { %>
                            <i class="fas fa-star-half-alt"></i>
                        <% } else { %>
                            <i class="far fa-star"></i>
                        <% } %>
                    <% } %>
                </div>
                <p class="text-xs text-gray-600 mt-1"><%= product.reviews %> Reviews</p>
                <a href="/product/<%= product.id %>" class="mt-2 inline-block bg-[#0a2a2d] text-white text-xs font-semibold px-4 py-2 rounded hover:bg-[#0f3a3f] transition">
                    Add to Cart
                </a>
            </div>
        <% }) %>
    <% } else { %>
        <div class="col-span-full text-center text-gray-600 text-sm">
            No products available at the moment.
        </div>
    <% } %>
</div>
    </section>

    <section class="max-w-7xl mx-auto px-6 sm:px-10 md:px-16 lg:px-24 xl:px-32 py-16 bg-white">
        <div class="flex flex-col lg:flex-row items-center gap-10">
            <div class="lg:w-1/2">
                <img alt="Hand holding beauty product bottle with green leaves in background" class="rounded w-full object-cover" height="400" src="https://storage.googleapis.com/a1aa/image/e4a2079d-79cc-4aae-3211-f421ed613ee5.jpg" width="600"/>
            </div>
            <div class="lg:w-1/2 text-center lg:text-left">
                <p class="uppercase text-xs sm:text-sm tracking-widest text-gray-500 mb-2">BE READY TO SHINE</p>
                <h2 class="text-3xl sm:text-4xl font-bold mb-4 leading-tight text-[#0a2a2d]">A WHOLE NEW LOOK</h2>
                <p class="text-sm sm:text-base text-gray-700 mb-6">
                    Discover the latest trends and products that will transform your beauty routine and give you a fresh new look.
                </p>
                <button class="bg-[#0a2a2d] text-white uppercase text-xs sm:text-sm font-semibold tracking-widest px-8 py-3 hover:bg-[#0f3a3f] transition">
                    Learn More
                </button>
            </div>
        </div>
    </section>

    <section class="max-w-7xl mx-auto px-6 sm:px-10 md:px-16 lg:px-24 xl:px-32 py-12 flex flex-col sm:flex-row justify-between gap-8 text-center sm:text-left">
        <div class="flex flex-col items-center sm:items-start space-y-2 sm:space-y-3 sm:w-1/3">
            <i class="fas fa-leaf text-[#0a2a2d] text-3xl mb-1"></i>
            <h3 class="font-semibold text-[#0a2a2d] text-sm sm:text-base">ORGANIC & ALL</h3>
            <p class="text-xs sm:text-sm text-gray-600 max-w-xs">
                We use only organic ingredients that are safe and gentle on your skin.
            </p>
        </div>
        <div class="flex flex-col items-center sm:items-start space-y-2 sm:space-y-3 sm:w-1/3">
            <i class="fas fa-truck text-[#0a2a2d] text-3xl mb-1"></i>
            <h3 class="font-semibold text-[#0a2a2d] text-sm sm:text-base">FREE SHIPPING</h3>
            <p class="text-xs sm:text-sm text-gray-600 max-w-xs">
                Enjoy free shipping on all orders over ₹3,500 with fast and reliable delivery.
            </p>
        </div>
        <div class="flex flex-col items-center sm:items-start space-y-2 sm:space-y-3 sm:w-1/3">
            <i class="fas fa-shield-alt text-[#0a2a2d] text-3xl mb-1"></i>
            <h3 class="font-semibold text-[#0a2a2d] text-sm sm:text-base">MONEY BACK GUARANTEE</h3>
            <p class="text-xs sm:text-sm text-gray-600 max-w-xs">
                If you are not satisfied, we offer a 30-day money back guarantee.
            </p>
        </div>
    </section>

    <section class="max-w-7xl mx-auto px-6 sm:px-10 md:px-16 lg:px-24 xl:px-32 py-8 flex justify-center items-center space-x-12 text-gray-400 text-xs sm:text-sm">
        <img alt="Logo 1 black and white" class="h-10 object-contain" height="40" src="https://storage.googleapis.com/a1aa/image/d551936b-594e-4906-9255-d3e232c8ef65.jpg" width="80"/>
        <img alt="Logo 2 black and white" class="h-10 object-contain" height="40" src="https://storage.googleapis.com/a1aa/image/49e3becb-ae1e-4fa9-2b81-ba8a1298ac8a.jpg" width="80"/>
        <img alt="Logo 3 black and white" class="h-10 object-contain" height="40" src="https://storage.googleapis.com/a1aa/image/a6329984-6ed3-4433-a85d-5cad7b25f2d6.jpg" width="80"/>
        <img alt="Logo 4 black and white" class="h-10 object-contain" height="40" src="https://storage.googleapis.com/a1aa/image/403c672d-0185-4ad2-d8e4-4b6648e3054b.jpg" width="80"/>
    </section>

    <section class="bg-gray-100 py-16 px-6 sm:px-10 md:px-16 lg:px-24 xl:px-32 text-center max-w-7xl mx-auto">
        <h2 class="text-2xl sm:text-3xl font-semibold mb-4 text-[#0a2a2d]">OUR HAPPY CLIENTS</h2>
        <p class="max-w-3xl mx-auto text-gray-600 text-sm sm:text-base mb-8">
            I just purchased a few products and I am so happy with the quality and the customer service. Highly recommend to all my friends.
        </p>
        <p class="italic text-gray-500 text-xs sm:text-sm mb-6">- Beauty Addict</p>
        <div class="max-w-4xl mx-auto grid grid-cols-1 sm:grid-cols-3 gap-8">
            <% if (typeof testimonials !== 'undefined' && testimonials.length > 0) { %>
                <% testimonials.forEach(testimonial => { %>
                    <div class="bg-white p-6 rounded shadow text-left">
                        <div class="flex items-center mb-3">
                            <img alt="<%= testimonial.name %>" class="w-12 h-12 rounded-full mr-3 object-cover" height="48" src="<%= testimonial.image %>" width="48"/>
                            <div>
                                <p class="font-semibold text-[#0a2a2d] text-sm"><%= testimonial.name %></p>
                                <div class="flex text-yellow-400 text-xs">
                                    <% for(let i = 1; i <= 5; i++) { %>
                                        <% if (i <= Math.floor(testimonial.rating)) { %>
                                            <i class="fas fa-star"></i>
                                        <% } else if (i - 0.5 <= testimonial.rating) { %>
                                            <i class="fas fa-star-half-alt"></i>
                                        <% } else { %>
                                            <i class="far fa-star"></i>
                                        <% } %>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        <p class="text-gray-700 text-xs sm:text-sm"><%= testimonial.review %></p>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="bg-white p-6 rounded shadow text-left">
                    <div class="flex items-center mb-3">
                        <img alt="Client 1 smiling woman with short hair" class="w-12 h-12 rounded-full mr-3 object-cover" height="48" src="https://storage.googleapis.com/a1aa/image/55fe2d22-c8ac-4695-5342-c2fc5b8fd681.jpg" width="48"/>
                        <div>
                            <p class="font-semibold text-[#0a2a2d] text-sm">Anjali S.</p>
                            <div class="flex text-yellow-400 text-xs">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star-half-alt"></i>
                            </div>
                        </div>
                    </div>
                    <p class="text-gray-700 text-xs sm:text-sm">
                        Excellent products and fast delivery. My skin feels amazing after using their rose oil.
                    </p>
                </div>
                <div class="bg-white p-6 rounded shadow text-left">
                    <div class="flex items-center mb-3">
                        <img alt="Client 2 happy woman with long hair" class="w-12 h-12 rounded-full mr-3 object-cover" height="48" src="https://storage.googleapis.com/a1aa/image/abecefe2-2f62-4a37-60b3-4406e3677c47.jpg" width="48"/>
                        <div>
                            <p class="font-semibold text-[#0a2a2d] text-sm">Rohit K.</p>
                            <div class="flex text-yellow-400 text-xs">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star-half-alt"></i>
                                <i class="far fa-star"></i>
                            </div>
                        </div>
                    </div>
                    <p class="text-gray-700 text-xs sm:text-sm">
                        Great quality skincare products. My skin feels hydrated and fresh.
                    </p>
                </div>
                <div class="bg-white p-6 rounded shadow text-left">
                    <div class="flex items-center mb-3">
                        <img alt="Client 3 smiling woman with black hair" class="w-12 h-12 rounded-full mr-3 object-cover" height="48" src="https://storage.googleapis.com/a1aa/image/711bf30c-bdef-4660-8458-594b4251cae2.jpg" width="48"/>
                        <div>
                            <p class="font-semibold text-[#0a2a2d] text-sm">Priya M.</p>
                            <div class="flex text-yellow-400 text-xs">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star-half-alt"></i>
                                <i class="far fa-star"></i>
                                <i class="far fa-star"></i>
                            </div>
                        </div>
                    </div>
                    <p class="text-gray-700 text-xs sm:text-sm">
                        The charcoal face mask really helped clear my skin. Will buy again!
                    </p>
                </div>
            <% } %>
        </div>
    </section>

    <section class="bg-[#0a2a2d] py-12 px-6 sm:px-10 md:px-16 lg:px-24 xl:px-32">
        <div class="max-w-7xl mx-auto flex flex-col sm:flex-row items-center justify-between gap-6">
            <h3 class="text-white uppercase text-xs sm:text-sm font-semibold tracking-widest">
                SIGN-UP THE MAKEUP FAN CLUB
            </h3>
            <form class="flex w-full sm:w-auto max-w-md" action="/newsletter" method="POST">
                <input class="flex-grow px-4 py-2 rounded-l-md focus:outline-none text-gray-900" 
                       name="email" 
                       placeholder="Enter your email" 
                       required 
                       type="email"/>
                <button class="bg-white text-[#0a2a2d] uppercase text-xs sm:text-sm font-semibold tracking-widest px-6 py-2 rounded-r-md hover:bg-gray-200 transition" 
                        type="submit">
                    Subscribe
                </button>
            </form>
        </div>
    </section>

    <%-include("../../views/partials/user/footer")%>

    <script>
        document.querySelector('form[action="/newsletter"]').addEventListener('submit', function(e) {
            e.preventDefault();
            const email = this.querySelector('input[name="email"]').value;
            alert('Thank you for subscribing! We\'ll keep you updated with the latest beauty trends.');
            this.reset();
        });

        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });
    </script>
</body>
</html>