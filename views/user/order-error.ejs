<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Payment Error - <%= errorMessage || 'Order Error' %></title>

  <!-- Razorpay SDK (once only) -->
  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }
    .error-container {
      background: white;
      padding: 40px 30px;
      border-radius: 16px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      max-width: 480px;
      width: 100%;
      text-align: center;
    }
    .error-icon {
      font-size: 64px;
      margin-bottom: 20px;
      animation: shake 0.5s ease-in-out;
    }
    @keyframes shake {
      0%, 100% { transform: translateX(0); }
      25% { transform: translateX(-10px); }
      75% { transform: translateX(10px); }
    }
    h1 { font-size: 28px; color: #2c3e50; margin-bottom: 16px; font-weight: 600; }
    .error-details { color: #7f8c8d; font-size: 16px; line-height: 1.6; margin-bottom: 12px; }
    .error-code {
      display: inline-block;
      background: #ecf0f1;
      padding: 6px 12px;
      border-radius: 6px;
      font-size: 13px;
      color: #95a5a6;
      margin-bottom: 24px;
      font-family: 'Courier New', monospace;
    }
    .order-info {
      background: #f8f9fa;
      padding: 16px;
      border-radius: 8px;
      margin: 20px 0;
      text-align: left;
    }
    .order-info-row {
      display: flex;
      justify-content: space-between;
      padding: 8px 0;
      border-bottom: 1px solid #dee2e6;
    }
    .order-info-row:last-child { border-bottom: none; font-weight: 600; color: #2c3e50; }
    .order-info-label { color: #7f8c8d; font-size: 14px; }
    .order-info-value { color: #2c3e50; font-size: 14px; font-weight: 500; }
    .button-group { display: flex; gap: 12px; margin-top: 24px; }
    .btn {
      flex: 1;
      border: none;
      padding: 14px 24px;
      font-size: 16px;
      font-weight: 600;
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-block;
    }
    .retry-btn {
      background-color: #3498db;
      color: white;
      box-shadow: 0 4px 12px rgba(52, 152, 219, 0.3);
    }
    .retry-btn:hover { background-color: #2980b9; transform: translateY(-2px); box-shadow: 0 6px 16px rgba(52, 152, 219, 0.4); }
    .retry-btn:disabled { background-color: #95a5a6; cursor: not-allowed; transform: none; }
    .secondary-btn { background-color: #ecf0f1; color: #2c3e50; }
    .secondary-btn:hover { background-color: #d5dbdb; }
    .footer-note { margin-top: 24px; font-size: 13px; color: #95a5a6; }
    .footer-note a { color: #3498db; text-decoration: none; font-weight: 500; }
    .footer-note a:hover { text-decoration: underline; }
    .loading { display: none; margin-top: 16px; }
    .loading.active { display: block; }
    .spinner {
      border: 3px solid #f3f3f3;
      border-top: 3px solid #3498db;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      animation: spin 1s linear infinite;
      margin: 0 auto;
    }
    @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
  </style>
</head>
<body>
  <div class="error-container">
    <div class="error-icon">‚ö†Ô∏è</div>
    <h1><%= errorMessage || "Payment Failed" %></h1>
    <p class="error-details">
      <%= errorDetails || "We're sorry, but there was an error processing your payment. Please try again." %>
    </p>

    <% if (errorCode) { %>
      <div class="error-code">Error Code: <%= errorCode %></div>
    <% } %>

    <% if (orderId && orderId !== 'N/A' && finalAmount) { %>
      <div class="order-info">
        <div class="order-info-row">
          <span class="order-info-label">Order ID:</span>
          <span class="order-info-value"><%= orderId %></span>
        </div>
        <div class="order-info-row">
          <span class="order-info-label">Amount:</span>
          <span class="order-info-value">‚Çπ<%= finalAmount.toFixed(2) %></span>
        </div>
      </div>

      <div class="button-group">
        <button class="btn retry-btn" id="retryPaymentBtn" onclick="retryPayment()">
          üîÑ Retry Payment
        </button>
        <a href="/orders" class="btn secondary-btn">
          üìã View All Orders
        </a>
      </div>

      <div class="loading" id="loadingIndicator">
        <div class="spinner"></div>
        <p style="margin-top: 12px; color: #7f8c8d;">Initiating payment...</p>
      </div>
    <% } else { %>
      <div class="button-group">
        <a href="/cart" class="btn retry-btn">üõí Back to Cart</a>
        <a href="/orders" class="btn secondary-btn">üìã View Orders</a>
      </div>
    <% } %>

    <div class="footer-note">
      Need help? <a href="/contact">Contact Support</a> or call us at 1800-XXX-XXXX
    </div>
  </div>

  <script>
    const orderId = '<%= orderId %>';
    const finalAmount = <%= finalAmount || 0 %>;

    async function retryPayment() {
      if (!orderId || orderId === 'N/A') {
        return Swal.fire('Error', 'Invalid order ID', 'error');
      }

      const btn = document.getElementById('retryPaymentBtn');
      const loading = document.getElementById('loadingIndicator');
      btn.disabled = true;
      btn.textContent = 'Processing...';
      loading.classList.add('active');

      try {
        const res = await fetch(`/checkout/retry-payment/${orderId}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });
        const result = await res.json();

        if (!result.success || !result.razorpay) {
          throw new Error(result.message || 'Failed to create payment');
        }

        const options = {
          key: result.key_id,
          amount: result.amount,
          currency: "INR",
          name: "Beauty Cart",
          description: "Retry Payment",
          order_id: result.razorpayOrderId,
          retry: false,
          handler: async function (response) {
            const verifyRes = await fetch("/checkout/verify-razorpay", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({
                razorpay_order_id: response.razorpay_order_id,
                razorpay_payment_id: response.razorpay_payment_id,
                razorpay_signature: response.razorpay_signature,
                orderId: orderId
              })
            });
            const vData = await verifyRes.json();

            if (vData.success) {
              Swal.fire("Success!", "Payment completed!", "success");
              setTimeout(() => {
                location.href = `/order-success?orderId=${vData.orderId}`;
              }, 1500);
            } else {
              throw new Error(vData.message || "Payment verification failed");
            }
          },
          prefill: {},
          theme: { color: "#000000" },
          modal: {
            ondismiss: () => {
              resetButton();
              Swal.fire("Cancelled", "You can retry anytime.", "info");
            }
          }
        };

        const rzp = new Razorpay(options);
        rzp.on('payment.failed', (resp) => {
          resetButton();
          const msg = resp.error?.description || "Payment failed";
          Swal.fire("Failed", msg, "error");
        });

        rzp.open();

      } catch (err) {
        resetButton();
        Swal.fire("Error", err.message, "error");
      }

      function resetButton() {
        loading.classList.remove('active');
        btn.disabled = false;
        btn.textContent = 'üîÑ Retry Payment';
      }
    }
  </script>
</body>
</html>