<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Payment Error - <%= errorMessage || 'Order Error' %></title>

  <!-- Razorpay SDK (once only) -->
  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <link rel="stylesheet" href="/css/user/orderError.css">

</head>
<body>
  <div class="error-container">
    <div class="error-icon">âš ï¸</div>
    <h1><%= errorMessage || "Payment Failed" %></h1>
    <p class="error-details">
      <%= errorDetails || "We're sorry, but there was an error processing your payment. Please try again." %>
    </p>

    <% if (errorCode) { %>
      <div class="error-code">Error Code: <%= errorCode %></div>
    <% } %>

    <% if (orderId && orderId !== 'N/A' && finalAmount) { %>
      <div class="order-info">
        <div class="order-info-row">
          <span class="order-info-label">Order ID:</span>
          <span class="order-info-value"><%= orderId %></span>
        </div>
        <div class="order-info-row">
          <span class="order-info-label">Amount:</span>
          <span class="order-info-value">â‚¹<%= finalAmount.toFixed(2) %></span>
        </div>
      </div>

      <div class="button-group">
        <button class="btn retry-btn" id="retryPaymentBtn" onclick="retryPayment()">
          ğŸ”„ Retry Payment
        </button>
        <a href="/orders" class="btn secondary-btn">
          ğŸ“‹ View All Orders
        </a>
      </div>

      <div class="loading" id="loadingIndicator">
        <div class="spinner"></div>
        <p style="margin-top: 12px; color: #7f8c8d;">Initiating payment...</p>
      </div>
    <% } else { %>
      <div class="button-group">
        <a href="/cart" class="btn retry-btn">ğŸ›’ Back to Cart</a>
        <a href="/orders" class="btn secondary-btn">ğŸ“‹ View Orders</a>
      </div>
    <% } %>

    <div class="footer-note">
      Need help? <a href="/contact">Contact Support</a> or call us at 1800-XXX-XXXX
    </div>
  </div>

  <script>
    const orderId = '<%= orderId %>';
    const finalAmount = <%= finalAmount || 0 %>;

    async function retryPayment() {
      if (!orderId || orderId === 'N/A') {
        return Swal.fire('Error', 'Invalid order ID', 'error');
      }

      const btn = document.getElementById('retryPaymentBtn');
      const loading = document.getElementById('loadingIndicator');
      btn.disabled = true;
      btn.textContent = 'Processing...';
      loading.classList.add('active');

      try {
        const res = await fetch(`/checkout/retry-payment/${orderId}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });
        const result = await res.json();

        if (!result.success || !result.razorpay) {
          throw new Error(result.message || 'Failed to create payment');
        }

        const options = {
          key: result.key_id,
          amount: result.amount,
          currency: "INR",
          name: "Beauty Cart",
          description: "Retry Payment",
          order_id: result.razorpayOrderId,
          retry: false,
          handler: async function (response) {
            const verifyRes = await fetch("/checkout/verify-razorpay", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({
                razorpay_order_id: response.razorpay_order_id,
                razorpay_payment_id: response.razorpay_payment_id,
                razorpay_signature: response.razorpay_signature,
                orderId: orderId
              })
            });
            const vData = await verifyRes.json();

            if (vData.success) {
              Swal.fire("Success!", "Payment completed!", "success");
              setTimeout(() => {
                location.href = `/order-success?orderId=${vData.orderId}`;
              }, 1500);
            } else {
              throw new Error(vData.message || "Payment verification failed");
            }
          },
          prefill: {},
          theme: { color: "#000000" },
          modal: {
            ondismiss: () => {
              resetButton();
              Swal.fire("Cancelled", "You can retry anytime.", "info");
            }
          }
        };

        const rzp = new Razorpay(options);
        rzp.on('payment.failed', (resp) => {
          resetButton();
          const msg = resp.error?.description || "Payment failed";
          Swal.fire("Failed", msg, "error");
        });

        rzp.open();

      } catch (err) {
        resetButton();
        Swal.fire("Error", err.message, "error");
      }

      function resetButton() {
        loading.classList.remove('active');
        btn.disabled = false;
        btn.textContent = 'ğŸ”„ Retry Payment';
      }
    }
  </script>
</body>
</html>