<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders - Supreme</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="/css/user/order.css">
</head>
<body>
    <div class="partial">
        <%- include("../../views/partials/user/header") %>
    </div>

    <div class="container">
        <h1>My Orders</h1>
        <div class="grid">
            <div class="partial">
                <%- include("../../views/partials/user/sidebar") %>
            </div>
            <div class="content">
                <div class="page-header">
                    <h2 class="page-title">My Orders</h2>
                    <div class="search-container">
                        <input 
                            type="text" 
                            id="orderSearch" 
                            class="form-control" 
                            placeholder="Search orders by product or status..." 
                            value="<%= filters.search || '' %>" 
                            style="max-width: 300px; border-radius: var(--border-radius);"
                        >
                        <button id="searchBtn" class="view-details-btn ms-2">
                            Search
                        </button>
                        <button id="clearSearchBtn" class="view-details-btn ms-1" style="background-color: #95a5a6;">
                            Clear
                        </button>
                    </div>
                </div>
                
                <% if (orders.length === 0) { %>
                    <div class="empty-state">
                        <div class="empty-state-icon">
                            <i class="fas fa-shopping-bag"></i>
                        </div>
                        <h3>No Orders Yet</h3>
                        <p><%= message %></p>
                        <a href="/shop" class="view-details-btn">
                            <i class="fas fa-shopping-cart"></i>
                            Browse Products
                        </a>
                    </div>
                <% } else { %>
                    <div class="order-grid" id="orderGrid">
                        <% orders.forEach(order => { %>
                            <div class="order-card 
                                <%= order.paymentStatus === 'Failed' ? 'payment-failed' : '' %>
                                <%= order.paymentStatus === 'Pending' && ['payment_pending', 'payment_failed'].includes(order.status) ? 'payment-pending' : '' %>" 
                                data-order-id="<%= order._id %>"              
                                data-product="<%= order.orderItems[0]?.productName?.toLowerCase() || '' %>" 
                                data-status="<%= order.status.toLowerCase() %>" 
                                data-date="<%= order.createdAt.toISOString() %>">
                                
                                <!-- Payment Alert for Failed/Pending Payments -->
                                <% if (order.paymentStatus === 'Failed' || (order.paymentStatus === 'Pending' && ['payment_pending', 'payment_failed'].includes(order.status))) { %>
                                    <div class="payment-alert <%= order.paymentStatus === 'Failed' ? 'failed' : '' %>">
                                        <i class="fas fa-<%= order.paymentStatus === 'Failed' ? 'exclamation-triangle' : 'clock' %> mr-1"></i>
                                        <strong>Payment <%= order.paymentStatus === 'Failed' ? 'Failed' : 'Incomplete' %>:</strong>
                                        <%= order.paymentStatus === 'Failed' ? 'Complete payment to confirm your order' : 'Please complete payment to confirm your order' %>
                                    </div>
                                <% } %>
                        
                                <div class="order-header">
                                    <div class="order-id-container">
                                        <span class="order-date">
                                            <i class="far fa-calendar-alt"></i>
                                            <%= order.createdAt.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                                        </span>
                                    </div>
                                    <!-- Payment Status Badge -->
                                    <div class="payment-badge <%= order.paymentStatus.toLowerCase() %>">
                                        <i class="fas fa-<%= order.paymentStatus === 'Paid' ? 'check-circle' : order.paymentStatus === 'Failed' ? 'times-circle' : 'clock' %>"></i>
                                        <%= order.paymentStatus %>
                                    </div>
                                </div>
                                
                                <div class="order-body">
                                    <div class="product-image-container">
  <img
    alt="<%= order.orderItems[0]?.productName || 'Product' %>"
    class="mx-auto mb-3 cursor-pointer"
    height="200"
    src="<%= order.orderItems[0]?.productImages?.[0] || '/images/placeholder.jpg' %>"
  />
</div>

                                    <div class="order-details">
                                        <h4 class="product-name"><%= order.orderItems[0]?.productName || 'Unknown Product' %></h4>
                                        <% if (order.orderItems.length > 1) { %>
                                            <p class="order-quantity">
                                                <i class="fas fa-cubes"></i>
                                                <%= order.orderItems.length %> items in this order
                                            </p>
                                        <% } %>
                                    </div>
                                </div>

                                <div class="order-footer">
                                    <div class="status-payment-container">
                                        <span class="status-badge 
                                            <%= 
                                                ['payment_pending'].includes(order.status) ? 'status-payment-pending' :
                                                ['payment_failed'].includes(order.status) ? 'status-payment-failed' :
                                                ['delivered', 'completed'].includes(order.status) ? 'status-completed' :
                                                ['returned', 'partially_returned'].includes(order.status) ? 'status-returned' :
                                                ['cancelled', 'partially_cancelled'].includes(order.status) ? 'status-cancelled' :
                                                ['return_requested', 'return_requested'].includes(order.status) ? 'status-return-requested' :
                                                ['shipped'].includes(order.status) ? 'status-shipped' :
                                                'status-processing'
                                            %>">
                                            <i class="<%= 
                                                ['payment_pending'].includes(order.status) ? 'fas fa-clock' :
                                                ['payment_failed'].includes(order.status) ? 'fas fa-times-circle' :
                                                ['delivered', 'completed'].includes(order.status) ? 'fas fa-check-circle' :
                                                ['returned', 'partially_returned'].includes(order.status) ? 'fas fa-undo' :
                                                ['cancelled', 'partially_cancelled'].includes(order.status) ? 'fas fa-ban' :
                                                ['return_requested'].includes(order.status) ? 'fas fa-clock' :
                                                ['shipped'].includes(order.status) ? 'fas fa-truck' :
                                                'fas fa-cogs'
                                            %>"></i>
                                            <%= 
                                                order.status === 'payment_pending' ? 'Payment Pending' :
                                                order.status === 'payment_failed' ? 'Payment Failed' :
                                                order.status === 'partially_returned' ? 'Partially Returned' :
                                                order.status === 'partially_cancelled' ? 'Partially Cancelled' :
                                                order.status === 'return_requested' ? 'Return Requested' :
                                                order.status.charAt(0).toUpperCase() + order.status.slice(1)
                                            %>
                                        </span>
                                    </div>

                                    <div class="price-actions-container">
                                        <span class="order-amount">â‚¹<%= order.finalAmount.toFixed(2) %></span>
                                        
                                        <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                                            <!-- ENHANCED: Retry Payment Button -->
                                            <% if (order.canRetryPayment) { %>
                                                <button 
                                                    onclick="retryPayment('<%= order._id %>', <%= order.finalAmount %>)" 
                                                    class="retry-payment-btn <%= order.paymentStatus === 'Failed' ? '' : 'pending' %>">
                                                    <i class="fas fa-<%= order.paymentStatus === 'Failed' ? 'exclamation-triangle' : 'clock' %>"></i>
                                                    <%= order.paymentStatus === 'Failed' ? 'Retry Payment' : 'Complete Payment' %>
                                                </button>
                                            <% } %>
                                            
                                            <a href="/order-details/<%= order._id %>" class="view-details-btn">
                                                <i class="fas fa-eye"></i>
                                                View Details
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>

                    <div class="pagination-container">
  <div class="pagination">
    <% if (totalPages > 0) { %>

      <% if (currentPage > 1) { %>
        <a href="?page=<%= currentPage - 1 %>&search=<%= filters.search || '' %>&status=<%= filters.status || '' %>"
           class="pagination-btn">
          <i class="fas fa-chevron-left text-xs"></i>
        </a>
      <% } %>

      <% for (let i = 1; i <= totalPages; i++) { %>
        <% if (i === currentPage) { %>
          <span class="pagination-btn pagination-current"><%= i %></span>

        <% } else if (i === 1 || i === totalPages || (i >= currentPage - 1 && i <= currentPage + 1)) { %>
          <a href="?page=<%= i %>&search=<%= filters.search || '' %>&status=<%= filters.status || '' %>"
             class="pagination-btn"><%= i %></a>

        <% } else if (i === currentPage - 2 || i === currentPage + 2) { %>
          <span class="pagination-btn">...</span>
        <% } %>
      <% } %>

      <% if (currentPage < totalPages) { %>
        <a href="?page=<%= currentPage + 1 %>&search=<%= filters.search || '' %>&status=<%= filters.status || '' %>"
           class="pagination-btn">
          <i class="fas fa-chevron-right text-xs"></i>
        </a>
      <% } %>

    <% } %>
  </div>
</div>

                <% } %>
            </div>
        </div>
    </div>

    <div class="partial">
        <%- include("../../views/partials/user/footer") %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script defer src="/js/user/orders.js"></script>
    
</body>
</html>