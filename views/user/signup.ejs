<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta content="width=device-width, initial-scale=1" name="viewport" />
  <title>Sign Up Page</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
  <style>
    .error-message { color: red; font-size: 0.75rem; margin-top: 0.25rem; }
    .password-container { position: relative; }
    .password-toggle { position: absolute; right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer; }
    .password-input { padding-right: 2.5rem; } /* Prevent text overlap with icon */
  </style>
</head>
<body class="min-h-screen flex items-center justify-center p-10 relative">
  <img
    alt="Blurred cosmetic product bottles with white flowers in foreground"
    class="absolute inset-0 w-full h-full object-cover"
    src="https://storage.googleapis.com/a1aa/image/aff8b111-8925-4b75-503a-b5fdc7cbeab9.jpg"
  />
  <div class="relative w-full max-w-md bg-white bg-opacity-90 rounded-xl p-8 shadow-md">
    <div class="flex border-b border-gray-300 mb-6 text-sm font-sans">
      <button class="flex-1 py-2 border-b-2 border-black font-normal" type="button">Sign Up</button>
      <a class="flex-1 py-2 text-gray-700" href="/login">LOGIN</a>
    </div>
    <form class="space-y-4 text-xs font-sans text-gray-600" method="POST" action="/signup" id="signForm">
      <div>
        <input
          class="w-full bg-gray-50 border border-gray-200 text-xs text-gray-600 rounded-sm px-2 py-1 focus:outline-none focus:ring-1 focus:ring-black"
          placeholder="Name"
          type="text"
          name="name"
          id="fullName"
          value="<%= old.name || '' %>"
        />
        <% if (errors.name) { %>
          <div class="error-message"><%= errors.name %></div>
        <% } %>
        <div id="error1" class="error-message"></div>
      </div>
      <div>
        <input
          class="w-full bg-gray-50 border border-gray-200 text-xs text-gray-600 rounded-sm px-2 py-1 focus:outline-none focus:ring-1 focus:ring-black"
          placeholder="Your email address *"
          type="email"
          name="email"
          id="email"
          value="<%= old.email || '' %>"
        />
        <% if (errors.email) { %>
          <div class="error-message"><%= errors.email %></div>
        <% } %>
        <div id="error2" class="error-message"></div>
      </div>
      <div>
        <input
          class="w-full bg-gray-50 border border-gray-200 text-xs text-gray-600 rounded-sm px-2 py-1 focus:outline-none focus:ring-1 focus:ring-black"
          placeholder="Phone Number*"
          type="tel"
          name="phone"
          id="phone"
          value="<%= old.phone || '' %>"
        />
        <% if (errors.phone) { %>
          <div class="error-message"><%= errors.phone %></div>
        <% } %>
        <div id="error3" class="error-message"></div>
      </div>

      <!-- Referral Code Field (Optional) -->
      <div>
        <input
          class="w-full bg-gray-50 border border-gray-200 text-xs text-gray-600 rounded-sm px-2 py-1 focus:outline-none focus:ring-1 focus:ring-black"
          placeholder="Referral Code (optional)"
          type="text"
          name="referralCode"
          id="referralCode"
          value="<%= old.referralCode || '' %>"
        />
        <% if (errors.referralCode) { %>
          <div class="error-message"><%= errors.referralCode %></div>
        <% } %>
        <div id="errorReferral" class="error-message"></div>
      </div>

      <div class="password-container">
        <input
          class="w-full bg-gray-50 border border-gray-200 text-xs text-gray-600 rounded-sm px-2 py-1 focus:outline-none focus:ring-1 focus:ring-black password-input"
          placeholder="Password*"
          type="password"
          name="password"
          id="password"
          value="<%= old.password || '' %>"
        />
        <i class="fas fa-eye password-toggle" id="togglePassword"></i>
        <% if (errors.password) { %>
          <div class="error-message"><%= errors.password %></div>
        <% } %>
        <div id="error4" class="error-message"></div>
      </div>
      <div class="password-container">
        <input
          class="w-full bg-gray-50 border border-gray-200 text-xs text-gray-600 rounded-sm px-2 py-1 focus:outline-none focus:ring-1 focus:ring-black password-input"
          placeholder="Confirm Password*"
          type="password"
          name="confirmPassword"
          id="confirmPassword"
          value="<%= old.confirmPassword || '' %>"
        />
        <i class="fas fa-eye password-toggle" id="toggleConfirmPassword"></i>
        <% if (errors.confirmPassword) { %>
          <div class="error-message"><%= errors.confirmPassword %></div>
        <% } %>
        <div id="error5" class="error-message"></div>
      </div>

      <% if (locals.message && message.length > 0) { %>
        <div class="error-message text-red-500 mb-4"><%= message %></div>
      <% } %>

      <div class="flex items-center space-x-2">
        <button class="bg-black text-white text-xs px-4 py-1 rounded-sm" type="submit">SIGN UP</button>
        <label class="text-gray-600 text-xs select-none">I agree to the privacy policy</label>
      </div>
    </form>

    <div class="flex items-center my-4 text-xs text-gray-500">
      <div class="flex-grow border-t border-gray-300"></div>
      <span class="mx-3 whitespace-nowrap">or sign in with</span>
      <div class="flex-grow border-t border-gray-300"></div>
    </div>
    <div class="flex space-x-2 text-[9px]">
      <a href="/auth/google" class="flex-1 border border-gray-300 rounded-sm py-1 text-gray-600 hover:bg-gray-100 text-center block">
        <i class="fab fa-google mr-2"></i>Login With Google
      </a>
      <button class="flex-1 border border-gray-300 rounded-sm py-1 text-gray-600 hover:bg-gray-100" type="button">
        Login With Facebook
      </button>
    </div>
  </div>

  <script>
    const togglePassword = document.getElementById('togglePassword');
    const password = document.getElementById('password');
    const toggleConfirmPassword = document.getElementById('toggleConfirmPassword');
    const confirmPassword = document.getElementById('confirmPassword');

    togglePassword.addEventListener('click', function () {
      const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
      password.setAttribute('type', type);
      this.classList.toggle('fa-eye');
      this.classList.toggle('fa-eye-slash');
    });

    toggleConfirmPassword.addEventListener('click', function () {
      const type = confirmPassword.getAttribute('type') === 'password' ? 'text' : 'password';
      confirmPassword.setAttribute('type', type);
      this.classList.toggle('fa-eye');
      this.classList.toggle('fa-eye-slash');
    });
  </script>
</body>
</html>-