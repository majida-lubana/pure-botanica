<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta content="width=device-width, initial-scale=1" name="viewport"/>
  <title><%= pageTitle || 'OTP Verification' %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body class="min-h-screen m-0 p-0">
  <div class="absolute inset-0 -z-10">
    <img 
      alt="Full screen background"
      class="w-full h-full object-cover" 
      src="<%= backgroundImage || 'https://storage.googleapis.com/a1aa/image/aff8b111-8925-4b75-503a-b5fdc7cbeab9.jpg' %>" 
    />
  </div>

    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-white rounded-xl p-8 w-[320px] sm:w-[360px] md:w-[400px] shadow-md max-h-full overflow-visible">
      <h2 class="text-center text-sm font-sans font-semibold mb-6 text-gray-800">
        <%= heading || 'OTP Verification' %>
      </h2>

      <p class="text-center text-xs text-gray-600 mb-6">
        <%= description || 'Enter the 4-digit code sent to your phone number' %>
      </p>

      <form class="space-y-6 text-center" id="otpForm" onsubmit="return validateOtpForm()">
        <% if (typeof csrfToken !== 'undefined') { %>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <% } %>

        <div class="flex justify-center space-x-3">
          <% for (let i = 1; i <= 4; i++) { %>
            <input 
              aria-label="OTP digit <%= i %>" 
              id="otp<%= i %>"
              name="otp<%= i %>" 
              class="otp-input w-12 h-12 text-center text-xl border border-gray-300 rounded-sm focus:outline-none focus:ring-1 focus:ring-black" 
              maxlength="1" 
              type="text" 
              inputmode="numeric" 
              pattern="[0-9]*" 
              required 
            />
          <% } %>
        </div>

        <button class="w-full bg-black text-white text-xs px-4 py-2 rounded-sm" type="submit">
          <%= buttonText || 'VERIFY OTP' %>
        </button>
      </form>

      <p class="text-center text-xs text-gray-500 mt-4">
        Didn't receive the code? 
        <button class="text-black underline disabled:text-gray-400" id="resendBtn" type="button" disabled>
          Resend OTP
        </button>
        <span class="ml-2 text-gray-500" id="timer"><%= initialTimer || '00:30' %></span>
      </p>

      <p class="text-center text-xs text-gray-600 mt-4">
        Already verified? 
        <a href="<%= loginUrl || '/login' %>" class="text-black underline">Login now</a>
      </p>
    </div>
  </div>

<script>
  let timeLeft = 30;
  const defaultResendTime = 30;

  const timerEl = document.getElementById('timer');
  const resendBtn = document.getElementById('resendBtn');

  function startCountdown() {
    const countdown = setInterval(() => {
      if (timeLeft <= 0) {
        clearInterval(countdown);
        timerEl.textContent = '';
        resendBtn.disabled = false;
      } else {
        const seconds = timeLeft % 60;
        timerEl.textContent = `00:${seconds < 10 ? '0' : ''}${seconds}`;
        timeLeft--;
      }
    }, 1000);
  }

  resendBtn.addEventListener('click', () => {
    resendBtn.disabled = true;
    timeLeft = defaultResendTime;
    timerEl.textContent = '00:30';
    startCountdown();

    $.ajax({
      type: "POST",
      url: "/resend-otp",
      success: function(response) {
        if (response.success) {
          Swal.fire({
            icon: "success",
            title: "OTP resent successfully",
            showConfirmButton: false,
            timer: 1500,
          });
        } else {
          Swal.fire({
            icon: "error",
            title: "Error",
            text: response.message || "Failed to resend OTP",
          });
        }
      },
      error: function() {
        Swal.fire({
          icon: "error",
          title: "Error",
          text: "An error occurred while resending OTP. Please try again",
        });
      }
    });
  });

  document.addEventListener('DOMContentLoaded', function () {
    const otpInputs = document.querySelectorAll('.otp-input');

    otpInputs.forEach((input, index) => {
      input.addEventListener('input', function () {
        if (this.value.length === 1 && index < otpInputs.length - 1) {
          otpInputs[index + 1].focus();
        }
      });

      input.addEventListener('keydown', function (e) {
        if (e.key === 'Backspace' && this.value === '' && index > 0) {
          otpInputs[index - 1].focus();
        }
      });
    });

    startCountdown();
  });

  function validateOtpForm() {
  const otp1 = document.getElementById("otp1").value;
  const otp2 = document.getElementById("otp2").value;
  const otp3 = document.getElementById("otp3").value;
  const otp4 = document.getElementById("otp4").value;
  const otpValue = otp1 + otp2 + otp3 + otp4;

  if (otpValue.length !== 4) {
    Swal.fire({
      icon: "error",
      title: "Invalid OTP",
      text: "Please enter all 4 digits"
    });
    return false;
  }

  $.ajax({
    type: "POST",
    url: "/verify-otp",
    data: { otp: otpValue },
    success: function (response) {
      if (response.success) {
        Swal.fire({
          icon: "success",
          title: "OTP verified successfully",
          showConfirmButton: false,
          timer: 1500,
        }).then(() => {
          window.location.href = response.redirctUrl || '/';
        });
      } else {
        Swal.fire({
          icon: "error",
          title: "Invalid OTP",
          text: response.message || "Incorrect OTP entered.",
        });
      }
    },
    error: function () {
     
      $.ajax({
        type: "POST",
        url: "/resend-otp",
        success: function(response) {
          if (response.success) {
            Swal.fire({
              icon: "error",
              title: "Invalid OTP",
              text: "A new OTP has been sent to your email.",
            });
            resendBtn.disabled = true;
            timeLeft = defaultResendTime;
            timerEl.textContent = '00:30';
            startCountdown();
          } else {
            Swal.fire({
              icon: "error",
              title: "Error",
              text: response.message || "Failed to resend OTP"
            });
          }
        },
        error: function() {
          Swal.fire({
            icon: "error",
            title: "Error",
            text: "An error occurred while resending OTP."
          });
        }
      });
    }
  });

  return false; 
}

</script>

</body>
</html>