<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>My Wallet - Pure Botanica</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/css/user/wallet.css">
</head>
<body>
  <div class="partial">
    <%- include("../../views/partials/user/header") %>
  </div>

  <div class="container">
    <div class="grid">
      <div class="partial">
        <%- include("../../views/partials/user/sidebar") %>
      </div>

      <div class="content">
        <div class="page-header">
          <h2 class="page-title">My Wallet</h2>
        </div>

        <!-- Wallet Balance -->
        <div class="wallet-balance-card">
          <h4>Available Balance</h4>
          <div class="amount">₹<%= parseFloat(wallet.balance).toFixed(2) %></div>
          <small>Use this balance to pay for your orders instantly!</small>
        </div>

        <!-- Use Wallet Toggle -->
        <% if (wallet.balance > 0) { %>
        <div class="toggle-switch">
          <span>Use wallet by default</span>
          <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="useWallet" <%= wallet.useInCheckout ? 'checked' : '' %>>
          </div>
        </div>
        <% } %>

        <!-- Transaction History -->
        <h5 class="mb-3">Transaction History</h5>
        <% if (transactions.length === 0) { %>
          <div class="text-center py-5 text-muted">
            <i class="fas fa-wallet fa-3x mb-3"></i>
            <p>No transactions yet. Your wallet activity will appear here.</p>
          </div>
        <% } else { %>
          <div class="transaction-grid">
            <% transactions.forEach(txn => { %>
              <div class="transaction-card">
                <div class="transaction-header">
                  <div class="transaction-date">
                    <i class="far fa-calendar-alt"></i>
                    <%= new Date(txn.date).toLocaleDateString('en-IN', { day: '2-digit', month: 'short', year: 'numeric' }) %>
                  </div>
                </div>
                <div class="transaction-body">
                  <div class="transaction-details">
                    <h6>
                      <%= txn.description %>
                      <% if (txn.orderId) { %>
                        <small class="text-muted">Order #<%= txn.orderId %></small>
                      <% } %>
                    </h6>
                  </div>
                  <div class="text-end">
                    <div class="amount <%= txn.type === 'credit' ? 'credit' : 'debit' %>">
                      <%= txn.type === 'credit' ? '+' : '-' %>₹<%= Math.abs(txn.amount).toFixed(2) %>
                    </div>
                    <div class="mt-1">
                      <span class="status-badge <%= 
                        txn.status === 'completed' ? 'status-completed' : 
                        txn.status === 'pending' ? 'status-pending' : 
                        'status-rejected' 
                      %>">
                        <i class="<%= 
                          txn.status === 'completed' ? 'fas fa-check-circle' : 
                          txn.status === 'pending' ? 'fas fa-clock' : 
                          'fas fa-times-circle' 
                        %>"></i>
                        <%= txn.status.charAt(0).toUpperCase() + txn.status.slice(1) %>
                        <% if (txn.type === 'refund' && txn.status === 'pending') { %> (Awaiting Admin)<% } %>
                      </span>
                    </div>
                  </div>
                </div>

                <!-- Admin Refund Buttons -->
                <% if (txn.type === 'refund' && txn.status === 'pending' && user.role === 'admin') { %>
                  <div class="p-3 border-top bg-light d-flex gap-2 justify-content-end">
                    <button 
                      class="btn btn-sm btn-success confirm-refund" 
                      data-txn-id="<%= txn._id %>"
                      data-amount="<%= txn.amount %>">
                      Confirm Refund
                    </button>
                    <button 
                      class="btn btn-sm btn-danger reject-refund" 
                      data-txn-id="<%= txn._id %>">
                      Reject
                    </button>
                  </div>
                <% } %>
              </div>
            <% }) %>
          </div>
        <% } %>

        <!-- Info Boxes -->
        <div class="row mt-5">
          <div class="col-md-6">
            <div class="p-3 bg-light rounded shadow-sm">
              <h6>Credits</h6>
              <ul class="small text-muted mb-0">
                <li>Refunds from returned orders</li>
                <li>Promotional cashback</li>
                <li>Referral bonuses</li>
              </ul>
            </div>
          </div>
          <div class="col-md-6">
            <div class="p-3 bg-light rounded shadow-sm">
              <h6>Debits</h6>
              <ul class="small text-muted mb-0">
                <li>Payments made using wallet</li>
                <li>Partial or full order payments</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="partial">
    <%- include("../../views/partials/user/footer") %>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Toggle wallet default
    document.getElementById('useWallet')?.addEventListener('change', function() {
      fetch('/wallet/toggle-default', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ useInCheckout: this.checked })
      });
    });

    // Admin Refund Actions
    document.querySelectorAll('.confirm-refund').forEach(btn => {
      btn.addEventListener('click', function() {
        const txnId = this.dataset.txnId;
        const amount = this.dataset.amount;
        if (confirm(`Confirm refund of ₹${amount}?`)) {
          fetch('/admin/refund/confirm', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ txnId, amount })
          }).then(r => r.json()).then(d => {
            if (d.success) location.reload();
            else alert('Error: ' + d.message);
          });
        }
      });
    });

    document.querySelectorAll('.reject-refund').forEach(btn => {
      btn.addEventListener('click', function() {
        if (confirm('Reject refund?')) {
          fetch('/admin/refund/reject', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ txnId: this.dataset.txnId })
          }).then(r => r.json()).then(d => {
            if (d.success) location.reload();
          });
        }
      });
    });
  </script>
</body>
</html>